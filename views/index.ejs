<!DOCTYPE html>
<html>
  <head>
    <title>To-Do App</title>
  </head>
  <body>
    <h1>My To-Do List</h1>
    <form action="/add" method="POST">
      <input type="text" name="task" placeholder="Enter a new task" required />
      <button type="submit">Add</button>
    </form>
    <ul>
      <% tasks.forEach(task => { %>
        <li><%= task %></li>
      <% }) %>
    </ul>
  </body>
</html>
